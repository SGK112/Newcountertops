    .section-title {
        font-size: 1.75rem;
    }
    
    .cta-section h2 {
        font-size: 1.75rem;
    }
}

/* Loading and empty states */
.skeleton-cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
}

.skeleton-card {
    height: 400px;
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: skeleton-loading 2s infinite;
    border-radius: 12px;
}

@keyframes skeleton-loading {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
}

.empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #64748b;
}

.empty-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
}

.empty-state h3 {
    color: #475569;
    margin-bottom: 1rem;
}

.load-more-section {
    text-align: center;
    padding: 2rem 0;
}

.d-none {
    display: none !important;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize countertops page
    const countertopsPage = new CountertopsPage();
    countertopsPage.init();
});

class CountertopsPage {
    constructor() {
        this.currentPage = 1;
        this.itemsPerPage = 12;
        this.filters = {};
        this.loading = false;
        this.hasMore = true;
    }
    
    init() {
        this.bindEvents();
        this.loadCountertops();
    }
    
    bindEvents() {
        // Filter change events
        document.getElementById('materialFilter').addEventListener('change', (e) => {
            this.filters.material = e.target.value;
            this.resetAndLoad();
        });
        
        document.getElementById('priceFilter').addEventListener('change', (e) => {
            this.filters.priceRange = e.target.value;
            this.resetAndLoad();
        });
        
        document.getElementById('colorFilter').addEventListener('change', (e) => {
            this.filters.color = e.target.value;
            this.resetAndLoad();
        });
        
        document.getElementById('sortFilter').addEventListener('change', (e) => {
            this.filters.sortBy = e.target.value;
            this.resetAndLoad();
        });
        
        // Load more button
        document.getElementById('loadMoreBtn').addEventListener('click', () => {
            this.loadCountertops(true);
        });
        
        // View toggle
        document.querySelectorAll('.view-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                document.querySelectorAll('.view-btn').forEach(b => b.classList.remove('active'));
                e.target.classList.add('active');
                this.toggleView(e.target.dataset.view);
            });
        });
    }
    
    resetAndLoad() {
        this.currentPage = 1;
        this.hasMore = true;
        document.getElementById('countertopsGrid').innerHTML = '';
        this.loadCountertops();
    }
    
    async loadCountertops(append = false) {
        if (this.loading || !this.hasMore) return;
        
        this.loading = true;
        this.showLoading(!append);
        
        try {
            const params = new URLSearchParams({
                page: this.currentPage,
                limit: this.itemsPerPage,
                ...this.filters
            });
            
            const response = await fetch(`/api/countertops?${params}`);
            const data = await response.json();
            
            if (data.countertops) {
                this.renderCountertops(data.countertops, append);
                this.updateResultsCount(data.pagination.totalItems);
                this.hasMore = data.pagination.hasNextPage;
                this.currentPage++;
                
                if (!this.hasMore) {
                    document.getElementById('loadMoreSection').style.display = 'none';
                }
            } else {
                this.showEmptyState();
            }
        } catch (error) {
            console.error('Error loading countertops:', error);
            this.showError();
        }
        
        this.loading = false;
        this.hideLoading();
    }
    
    renderCountertops(countertops, append = false) {
        const grid = document.getElementById('countertopsGrid');
        
        if (!append) {
            grid.innerHTML = '';
        }
        
        if (countertops.length === 0 && !append) {
            this.showEmptyState();
            return;
        }
        
        countertops.forEach(countertop => {
            const card = this.createCountertopCard(countertop);
            grid.appendChild(card);
        });
        
        document.getElementById('emptyState').classList.add('d-none');
    }
    
    createCountertopCard(countertop) {
        const card = document.createElement('div');
        card.className = 'countertop-card';
        card.onclick = () => window.location.href = `/countertops/${countertop._id}`;
        
        const primaryImage = countertop.images?.find(img => img.isPrimary) || countertop.images?.[0];
        const imageUrl = primaryImage?.url || '/images/placeholder-countertop.svg';
        
        card.innerHTML = `
            <div class="countertop-image-container">
                <img src="${imageUrl}" alt="${countertop.name}" class="countertop-image" 
                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'">
                <div class="countertop-image-placeholder" style="display: none;">
                    <div class="placeholder-icon">üè†</div>
                    <div class="placeholder-text">Countertop Image</div>
                </div>
            </div>
            <div class="countertop-content">
                <h3 class="countertop-title">${countertop.name}</h3>
                <div class="countertop-material">${this.formatMaterial(countertop.material)}</div>
                <div class="countertop-price">${countertop.pricePerSqFt || this.formatPriceRange(countertop.pricing?.priceRange)}</div>
                <div class="countertop-features">
                    ${countertop.properties?.maintenanceLevel ? `<span class="feature-tag">${countertop.properties.maintenanceLevel} maintenance</span>` : ''}
                    ${countertop.properties?.heatResistance ? `<span class="feature-tag">${countertop.properties.heatResistance} heat resistance</span>` : ''}
                    ${countertop.properties?.stainResistance ? `<span class="feature-tag">${countertop.properties.stainResistance} stain resistance</span>` : ''}
                </div>
                <div class="countertop-actions">
                    <button class="btn btn-primary btn-sm" onclick="event.stopPropagation(); requestQuote('${countertop._id}')">
                        Get Quote
                    </button>
                    <button class="btn btn-outline btn-sm" onclick="event.stopPropagation(); viewDetails('${countertop._id}')">
                        View Details
                    </button>
                </div>
            </div>
        `;
        
        return card;
    }
    
    formatMaterial(material) {
        return material.charAt(0).toUpperCase() + material.slice(1);
    }
    
    formatPriceRange(priceRange) {
        if (!priceRange) return 'Contact for pricing';
        const { min, max, unit } = priceRange;
        if (min && max) {
            return `$${min} - $${max}/${unit || 'sq ft'}`;
        }
        return 'Contact for pricing';
    }
    
    showLoading(full = false) {
        if (full) {
            document.getElementById('loadingState').classList.remove('d-none');
            document.getElementById('countertopsGrid').classList.add('d-none');
        }
        document.getElementById('loadMoreBtn').textContent = 'Loading...';
        document.getElementById('loadMoreBtn').disabled = true;
    }
    
    hideLoading() {
        document.getElementById('loadingState').classList.add('d-none');
        document.getElementById('countertopsGrid').classList.remove('d-none');
        document.getElementById('loadMoreBtn').textContent = 'Load More Countertops';
        document.getElementById('loadMoreBtn').disabled = false;
    }
    
    showEmptyState() {
        document.getElementById('emptyState').classList.remove('d-none');
        document.getElementById('loadMoreSection').style.display = 'none';
    }
    
    showError() {
        // Could show a toast notification or error state
        console.error('Failed to load countertops');
    }
    
    updateResultsCount(total) {
        document.getElementById('resultsCount').textContent = total;
    }
    
    toggleView(view) {
        const grid = document.getElementById('countertopsGrid');
        if (view === 'list') {
            grid.classList.add('list-view');
        } else {
            grid.classList.remove('list-view');
        }
    }
}

// Global functions for card actions
function requestQuote(countertopId) {
    window.location.href = `/get-quote?countertop=${countertopId}`;
}

function viewDetails(countertopId) {
    window.location.href = `/countertops/${countertopId}`;
}

function resetFilters() {
    document.getElementById('materialFilter').value = '';
    document.getElementById('priceFilter').value = '';
    document.getElementById('colorFilter').value = '';
    document.getElementById('sortFilter').value = 'featured';
    
    const page = new CountertopsPage();
    page.filters = {};
    page.resetAndLoad();
}
</script>
